- flash.each do |name, msg|
  - if msg.is_a?(String)
    %div{:class => "alert closable alert-#{name.to_s == 'notice' ? 'success' : 'danger'}", :role => "alert"}
      %button.btn-close{"aria-hidden" => "true", "data-bs-dismiss" => "alert", :type => "button", :class => "float-end"}
      = content_tag :div, msg, :id => "flash_#{name}"
